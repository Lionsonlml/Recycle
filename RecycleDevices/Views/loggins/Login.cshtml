@model RecycleDevices.Models.loggin

@{
    ViewData["Title"] = "Login";
}
<head>
    <link rel="stylesheet" href="~/css/Login_Recup.css" />
</head>

<hr />
<div id="login">
<div class="row" >
        <center>
            <h3>Ingrese</h3>
    <div class="col-md-4">
        
        
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label  class="control-label">Email de usuario</label>
                <input asp-for="imail" class="form-control" />
                <span asp-validation-for="imail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Contraseña</label>
                <input asp-for="password" type="password" class="form-control" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ingresar" class="btn btn-primary" id="button" />
            </div>
            
        </form>
        <div>
            <a asp-action="Recover">Olvidé mi contraseña</a>
        </div>
        </div>
        </center>
    </div>
    
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
