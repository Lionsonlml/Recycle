@model RecycleDevices.Models.Recuperar

@{

    ViewData["Title"] = "PassworRec";
}
<head>
    <link rel="stylesheet" href="~/css/Login_Recup.css" />
</head>



<hr />
<div id="login">
<div class="row">
    <center>
    <h3>Cambio de Contraseña </h3>
            <p>Se le ha enviado un codigo a su correo electrónico para cambiar su contraseña. <a href="https://mail.google.com/mail/u/0/#inbox" target="_blank"> entrar al correo</a></p>
    <div class="col-md-4">
        <form asp-action="PassworRec">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label  class="control-label">Nueva Contraseña</label>
                <input asp-for="newPassword" class="form-control" />
                <span asp-validation-for="newPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Código</label>
                <input asp-for="code" class="form-control" />
                <span asp-validation-for="code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cambiar" class="btn btn-primary" />
            </div>
        </form>
    </div>
        </center>
</div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
