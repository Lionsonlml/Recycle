@model IEnumerable<RecycleDevices.Models.Apointment>



@{
    ViewData["Title"] = "AsignedApointment";
}

@{
    Layout = "~/Views/Shared/_LayoutCita.cshtml";
}


<h1>Citas asignadas Domiciliario</h1>

<table class="table table-striped table-borderless table-sm table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Municipality)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PackageId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductCategoryID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Points)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (item.State != "Completa" )
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Municipality)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PackageId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductCategoryID)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Points)
                    </td>
                    <td>
                        <a class="btn btn-outline-dark" asp-action="UpdateState" asp-route-id="@item.Id">Update</a>
                        @* <a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                        <a class="btn btn-outline-dark" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        <a class="btn btn-outline-dark" asp-action="ConsultPoints" asp-route-id="@item.Id">ConsultPoints</a>
                    </td>
                </tr>
            }   }
    </tbody>
</table>

<hr>

<h1>Citas Completadas</h1>

<table class="table table-striped table-borderless table-sm table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Municipality)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PackageId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductCategoryID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Points)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        @if (item.State == "Completa")
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Municipality)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PackageId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductCategoryID)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Points)
                </td>
                <td>
                    <a class="btn btn-outline-dark" asp-action="UpdateState" asp-route-id="@item.Id">Update</a>
                    @* <a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                    <a class="btn btn-outline-dark" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    <a class="btn btn-outline-dark" asp-action="ConsultPoints" asp-route-id="@item.Id">ConsultPoints</a>
                </td>
            </tr>
        }}
    </tbody>
</table>
