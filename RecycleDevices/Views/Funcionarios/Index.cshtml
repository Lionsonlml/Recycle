@model IEnumerable<RecycleDevices.Models.Funcionario>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/CRUDFun.cshtml";
}

<h6>Funcionarios Registrados</h6>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdFun)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NivelEstudio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cargo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdFun)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NivelEstudio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cargo)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.IdFun" class="btn btn-success">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdFun" class="btn btn-success">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdFun" class="btn btn-success">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
